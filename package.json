{
  "name": "project-homepage",
  "engines": {
    "npm": "⚠️️  【bun】 を使ってください",
    "pnpm": "⚠️️  【bun】 を使ってください",
    "yarn": "⚠️️  【bun】 を使ってください"
  },
  "scripts": {
    "check-code": "run-p -c lint spell-check",
    "commitlint": "commitlint --edit",
    "fix": "run-p fix:* -c",
    "fix:config": "prettier \"./config/**/*\" \"./*.{js,ts,mjs,csj}\" --write --log-level warn",
    "fix:pack": "fixpack",
    "lint": "run-p lint:* -c",
    "lint:config": "prettier \"./config/**/*\" \"./*.{js,ts,mjs,csj}\" --check --log-level warn",
    "lint:editorconfigChecker": "ec",
    "lint:pack": "fixpack --dryRun",
    "prepare": "husky",
    "spell-check": "cspell \"./config/**\" --no-progress"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@types/bun": "latest",
    "cspell": "8.6.1",
    "editorconfig-checker": "5.1.5",
    "fixpack": "4.0.0",
    "husky": "9.0.11",
    "npm-run-all2": "6.1.2",
    "prettier": "3.2.5",
    "typescript": "5.4.4"
  },
  "peerDependencies": {
    "typescript": "5.4.4"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module"
}
